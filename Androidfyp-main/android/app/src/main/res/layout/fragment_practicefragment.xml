<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F1F5F9"
    tools:context=".app.practice.view.Practicefragment">

    <!-- Title -->
    <TextView
        android:id="@+id/tvPracticeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Practice Session"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#0F172A"
        android:paddingBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- TOP SECTION: Camera + Avatar, stacked vertically -->
    <LinearLayout
        android:id="@+id/layoutTopSection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="4dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvPracticeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutQuestionCard">

        <!-- Camera Card -->
        <FrameLayout
            android:id="@+id/cameraPreviewContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginBottom="8dp"
            android:elevation="6dp"
            android:padding="6dp"
            android:clipToOutline="true"
            android:backgroundTint="#1E293B"
            android:background="@drawable/rounded_card_dark">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvCameraPlaceholder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Camera"
                android:textColor="#FFFFFF"
                android:alpha="0.7"
                android:textSize="14sp"
                android:layout_gravity="center"/>
        </FrameLayout>

        <!-- Avatar Card -->
        <LinearLayout
            android:id="@+id/layoutAvatarCard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@drawable/rounded_card_white"
            android:elevation="6dp"
            android:gravity="center"
            android:padding="16dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/imgAvatar"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                android:background="@drawable/circle_gray"
                android:padding="6dp"
                android:contentDescription="AI Avatar"/>

            <TextView
                android:id="@+id/tvAvatarName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interview Avatar"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#0F172A"
                android:paddingTop="10dp"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Question Card -->
    <LinearLayout
        android:id="@+id/layoutQuestionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_card_white"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/layoutControlsSection">

        <TextView
            android:id="@+id/tvQuestionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Question"
            android:textStyle="bold"
            android:textColor="#0F172A"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tvCurrentQuestion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your question will appear here."
            android:textSize="14sp"
            android:textColor="#475569"
            android:paddingTop="6dp"/>
    </LinearLayout>

    <!-- TIMER + BUTTONS SECTION -->
    <LinearLayout
        android:id="@+id/layoutControlsSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Timer Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#0F172A"/>

            <TextView
                android:id="@+id/tvRecordingStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Not recording"
                android:textSize="13sp"
                android:textColor="#DC2626"/>
        </LinearLayout>

        <!-- Modern Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="6dp">

            <Button
                android:id="@+id/btnStartPractice"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Start"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_blue"
                android:backgroundTint="@null"
                app:backgroundTint="@null" />




            <Button
                android:id="@+id/btnEndSession"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="End"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_danger"
            android:backgroundTint="@null"
            app:backgroundTint="@null" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
