<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.EntryFragment"
    android:background="@color/blue">

    <!-- Animated App Logo/Icon -->
    <ImageView
        android:id="@+id/appLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:src="@drawable/interview_logo"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="Wazzafak AI Logo"
        android:scaleType="fitCenter" />

    <!-- Floating Animation Elements -->
    <View
        android:id="@+id/floatingDot1"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:background="@drawable/circle_white"
        android:alpha="0.6"
        app:layout_constraintTop_toTopOf="@id/appLogo"
        app:layout_constraintStart_toEndOf="@id/appLogo"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp" />

    <View
        android:id="@+id/floatingDot2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/circle_white"
        android:alpha="0.4"
        app:layout_constraintBottom_toBottomOf="@id/appLogo"
        app:layout_constraintEnd_toStartOf="@id/appLogo"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp" />

    <View
        android:id="@+id/floatingDot3"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/circle_white"
        android:alpha="0.7"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toStartOf="@id/appLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp" />

    <!-- Welcome Title with Gradient Effect -->
    <TextView
        android:id="@+id/welcomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to\nWazzafak AI"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:letterSpacing="0.02"
        android:layout_marginTop="20dp"
        android:shadowColor="#80000000"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="4"
        app:layout_constraintTop_toBottomOf="@id/appLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Ace your interviews and optimize your CV with expert AI guidance"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:alpha="0.9"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toBottomOf="@id/welcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Features List -->
    <LinearLayout
        android:id="@+id/featuresContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintTop_toBottomOf="@id/subTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Feature 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/practice"
                android:layout_marginEnd="12dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Live AI-powered mock interviews"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Feature 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/cv"
                android:layout_marginEnd="12dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Smart CV analysis and optimization"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>

        <!-- Feature 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/analysis"
                android:layout_marginEnd="12dp"
                app:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Personalized feedback and progress tracking"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:alpha="0.9" />
        </LinearLayout>
    </LinearLayout>

    <!-- Enhanced Get Started Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/getStartedButton"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:text="Get Started"
        android:textColor="@color/blue"
        android:textSize="18sp"
        android:textStyle="bold"
        android:backgroundTint="@color/white"
        android:elevation="12dp"
        app:cornerRadius="32dp"
        app:strokeWidth="0dp"
        app:rippleColor="#20000000"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:stateListAnimator="@animator/button_lift"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Pulse Animation Indicator -->
    <View
        android:id="@+id/pulseIndicator"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/pulse_circle"
        android:alpha="0.3"
        app:layout_constraintTop_toTopOf="@id/getStartedButton"
        app:layout_constraintBottom_toBottomOf="@id/getStartedButton"
        app:layout_constraintStart_toStartOf="@id/getStartedButton"
        app:layout_constraintEnd_toEndOf="@id/getStartedButton" />



</androidx.constraintlayout.widget.ConstraintLayout>